{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Template/template.csproj"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "line": 1,
            "column": 1,
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "dotnet watch run"
          },
          "endsPattern": {
            "regexp": "dotnet watch ðŸš€ Started"
          }
        }
      },
    },
    {
      "label": "dotnet terminate",
      "command": "${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "dotnet watch"
    }
  ]
}
